{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "HTTP Argument Setter",
  "configuration-groups": [
    {
      "label": "Driver Argument Setter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "URL",
          "name": "url"
        },
        {
          "widget-type": "select",
          "label": "HTTP Method",
          "name": "method",
          "widget-attributes": {
            "values": [
              "GET",
              "POST",
              "PUT",
              "DELETE",
              "HEAD",
              "OPTIONS"
            ],
            "default": "GET"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Request Body",
          "name": "body"
        },
        {
          "widget-type": "textbox",
          "label": "Connection Timeout (milliseconds)",
          "name": "connectTimeoutMillis"
        },
        {
          "widget-type": "textbox",
          "label": "Number of Retries",
          "name": "numRetries"
        },
        {
          "widget-type": "select",
          "label": "Should Follow Redirects",
          "name": "followRedirects",
          "widget-attributes" : {
            "values": [
              "true",
              "false"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Request Headers",
          "name": "requestHeaders",
          "widget-attributes" : {
            "showDelimiter": "false",
            "kv-delimiter" : ":",
            "delimiter" : ";"
          }
        }
      ]
    }
  ],
  "outputs": []
}
